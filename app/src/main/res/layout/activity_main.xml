<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:text="QUẢN LÝ CHI TIÊU"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAddTransaction"
        android:text="Thêm giao dịch mới"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btnViewTransactions"
        android:text="Xem danh sách giao dịch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btnOpenCategory"
        android:text="Quản lý danh mục"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_600"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btnOpenBudget"
        android:text="Hạn mức chi tiêu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange_600"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btn_go_goal"
        android:text="Mục tiêu tiết kiệm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_600"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btnOpenChart"
        android:text="Biểu đồ chi tiêu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_600"
        android:textColor="@android:color/white"
        android:padding="16dp"
        style="@style/Widget.Material3.Button"/>

</LinearLayout>